generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  voided      Int      @default(0)
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id              Int           @id @default(autoincrement())
  email           String        @unique
  password        String
  firstName       String?
  lastName        String?
  gender          String?
  phone           String?
  dob             DateTime?
  photo           String?
  cooprateAccount Int           @default(0)
  companyId       Int?
  company         Company?      @relation(fields: [companyId], references: [id])
  roleId          Int?
  role            Role?         @relation(fields: [roleId], references: [id])
  courses         Course[]
  voided          Int           @default(0)
  examAttempts    ExamAttempt[]
  enrollments     Enrollments[]
  events          Event[]
}

model Company {
  id        Int      @id @default(autoincrement())
  uuid      String   @unique @default(uuid())
  code      String   @unique
  name      String?
  status    String?
  logo      String?
  location  String?
  address   String?
  email     String   @unique
  phone     String?
  createdBy Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  voided    Int
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  courses     Course[]
  createdBy   Int
  voided      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Requirement {
  id        Int     @id @default(autoincrement())
  content   String // The requirement text
  courseId  Int
  mandatory Boolean @default(false)
  course    Course  @relation(fields: [courseId], references: [id])
  voided    Int     @default(0)
}

model Course {
  id           Int           @id @default(autoincrement())
  title        String
  slug         String?       @unique
  description  String?
  published    Boolean       @default(false)
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  deleted_at   DateTime?
  photo        String?
  categoryId   Int? // foreign key to Category
  category     Category?     @relation(fields: [categoryId], references: [id])
  uuid         String        @unique @default(uuid())
  voided       Int           @default(0)
  createdBy    User          @relation(fields: [createdById], references: [id])
  createdById  Int
  requirements Requirement[]
  lessons      Lesson[]
  events       Event[]
  questions    Questions[]
  exams        Exam[]
}

model Lesson {
  id                Int         @id @default(autoincrement())
  courseId          Int?
  course            Course?     @relation(fields: [courseId], references: [id])
  lessonName        String?
  lessonVideo       String?
  lessonDuration    String?
  lessonOrder       Decimal
  lessonDescription String?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  lessonDocument    String?
  photo             String?
  photoPath         String?
  voided            Int         @default(0)
  questions         Questions[]
  exams             Exam[]
}

model Event {
  id          Int           @id @default(autoincrement())
  title       String?
  description String?
  startDate   DateTime?
  endDate     DateTime?
  image       String?
  capacity    Int?
  location String?
  courseId    Int?
  course      Course?       @relation(fields: [courseId], references: [id])
  price       Decimal
  voided      Int           @default(0)
  userId      Int?
  user        User?         @relation(fields: [userId], references: [id])
  enrollments Enrollments[]
}

model QuestionType {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String?
  voided      Int         @default(0)
  questions   Questions[]
}

model Questions {
  id              Int               @id @default(autoincrement())
  questionTypeId  Int?
  questionType    QuestionType?     @relation(fields: [questionTypeId], references: [id])
  question        String?
  lessonId        Int?
  lesson          Lesson?           @relation(fields: [lessonId], references: [id])
  courseId        Int?
  course          Course?           @relation(fields: [courseId], references: [id])
  voided          Int               @default(0)
  questionChoices QuestionChoices[]
  examQuestions   ExamQuestions[]
  examAnswers     ExamAnswer[]
}

model QuestionChoices {
  id            Int          @id @default(autoincrement())
  questionId    Int?
  questions     Questions?   @relation(fields: [questionId], references: [id])
  choice        String?
  correctAnswer Int?         @default(0)
  voided        Int          @default(0)
  examAnswers   ExamAnswer[]
}

model Exam {
  id            Int             @id @default(autoincrement())
  title         String
  description   String?
  courseId      Int?
  course        Course?         @relation(fields: [courseId], references: [id])
  duration      Int? // in minutes
  lessonId      Int?
  lesson        Lesson?         @relation(fields: [lessonId], references: [id])
  examType      Int?            @default(0) //0 - CAT -- 1- Exams
  totalMarks    Int?
  isPublished   Boolean         @default(false)
  voided        Int             @default(0)
  examQuestions ExamQuestions[]
  examAttempts  ExamAttempt[]
}

model ExamQuestions {
  id         Int       @id @default(autoincrement())
  examId     Int
  exam       Exam      @relation(fields: [examId], references: [id])
  questionId Int
  question   Questions @relation(fields: [questionId], references: [id])
  marks      Int?      @default(1)
  voided     Int?      @default(0)
}

model ExamAttempt {
  id          Int          @id @default(autoincrement())
  examId      Int
  exam        Exam         @relation(fields: [examId], references: [id])
  userId      Int
  user        User         @relation(fields: [userId], references: [id])
  score       Int?
  startedAt   DateTime     @default(now())
  endedAt     DateTime?
  totalMarks  Int?
  percentage  Float?
  status      ExamStatus   @default(IN_PROGRESS)
  examAnswers ExamAnswer[]
  voided      Int?         @default(0)
}

enum AnswerMode {
  CHOICE
  TEXT
  JSON
  NUMERIC
}

model ExamAnswer {
  id         Int              @id @default(autoincrement())
  attemptId  Int
  attempt    ExamAttempt      @relation(fields: [attemptId], references: [id])
  questionId Int
  question   Questions        @relation(fields: [questionId], references: [id])
  choiceId   Int?
  choice     QuestionChoices? @relation(fields: [choiceId], references: [id])
  isCorrect  Boolean?
  textAnswer String?
  answerMode AnswerMode
  score      Int?
  voided     Int?             @default(0)
}

enum ExamStatus {
  IN_PROGRESS
  SUBMITTED
  MARKED
}

enum EnrollmentStatus {
  IN_PROGRESS
  ON_HOLD
  PAID
  PENDING_PAYMENTS
  COMPELETED
}

model Enrollments {
  id       Int              @id @default(autoincrement())
  userId   Int
  user     User             @relation(fields: [userId], references: [id])
  eventId  Int
  event    Event            @relation(fields: [eventId], references: [id])
  price    Int?             @default(1)
  status   EnrollmentStatus
  voided   Int?             @default(0)
  payments Payments[]
}

enum PaymentModel {
  Paypal
  Visa
  Mpesa
}

model Payments {
  id            Int              @id @default(autoincrement())
  enrollmentId  Int
  enrollment    Enrollments      @relation(fields: [enrollmentId], references: [id])
  orderNumber   String?
  payerNumber   String?
  amount        String?
  currency      String?
  modeOfPayment PaymentModel
  status        EnrollmentStatus
  voided        Int?             @default(0)
}
